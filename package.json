{
  "name": "react-easy-notify",
  "version": "1.0.6",
  "description": "A React Library For Notifications",
  "author": "AlsiddigAhmed",
  "license": "MIT",
  "repository": "ElsiddigAhmed/react-easy-notify",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "source": "src/index.tsx",
  "keywords": [
    "react",
    "notification",
    "react-notify",
    "react-easy-notify",
    "notify",
    "react-notification",
    "toast",
    "alert",
    "react-alert"
  ],
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://github.com/ElsiddigAhmed/react-easy-notify#readme",
  "size-limit": [
    {
      "path": "dist/**",
      "import": "{ createComponent }"
    }
  ],
  "scripts": {
    "build": "microbundle-crl --compress --no-sourcemap --format cjs",
    "start": "microbundle-crl --watch --compress  --no-sourcemap --format  cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint ./src/**/*",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "size": "npm run build && size-limit"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "bundleDependencies": false,
  "devDependencies": {
    "@size-limit/preset-big-lib": "^4.6.0",
    "@size-limit/preset-small-lib": "^4.6.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "size-limit": "^4.6.0",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist"
  ]
}
